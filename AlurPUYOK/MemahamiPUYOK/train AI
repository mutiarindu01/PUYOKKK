      <div>
        <button>Jual Aset Sekarang</button>
        <button>Beli Aset Digital</button>
      </div>
    </section>
    {/* Trending Tokens */}
    <section>
      <h2>Token yang Sedang Tren</h2>
      <div className="token-grid">
        {tokens.map(token => (
          <TokenCard key={token.id} token={token} />
        ))}
      </div>
    </section>
    {/* Featured NFTs */}
    <section>
      <h2>NFT Pilihan Minggu Ini</h2>
      <div className="nft-grid">
